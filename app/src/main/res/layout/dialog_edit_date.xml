<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="@dimen/margin"
    android:background="@drawable/shape_black_rect_bg"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_xlarge"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.android.jv.ink.launcherink.ui.customview.WheelView
            android:id="@+id/dialog_edit_date_year"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1.8"
            android:divider="@color/primary"
            android:dividerHeight="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/year"
            android:textColor="@color/primary"
            android:textSize="@dimen/font_18" />


        <com.android.jv.ink.launcherink.ui.customview.WheelView
            android:id="@+id/dialog_edit_date_month"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1.8"
            android:divider="@color/primary"
            android:dividerHeight="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/month"
            android:textColor="@color/primary"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <include layout="@layout/common_dialog_bottom" />

</LinearLayout>