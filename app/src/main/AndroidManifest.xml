<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rachel.manager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.RachelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rachel.manager.ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".ui.SuperUserActivity" />
        <activity android:name=".ui.SchoolDetailActivity" />
        <activity android:name=".ui.WebActivity" />
        <activity android:name=".ui.CollegeActivity" />
        <activity android:name=".ui.MajorDetailActivity" />
        <activity android:name=".ui.EditActivity" />
        <activity android:name=".ui.MeActivity" />
        <activity android:name=".ui.RankActivity" />
        <activity android:name=".ui.FilterConditionActivity" />
    </application>

</manifest>